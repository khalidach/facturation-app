{
  "name": "facturation-app",
  "version": "1.0.0",
  "description": "Desktop application for facturation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:frontend": "cd frontend && npm install && npm run build",
    "package": "npm run build:frontend && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "khalid achbboukh",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.facturation.app",
    "productName": "Facturation Pro",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "frontend/dist/**/*",
      "backend/**/*",
      "facturation.db"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
