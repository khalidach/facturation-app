{
  "name": "facturation-app",
  "version": "1.0.0",
  "description": "Desktop application for facturation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:frontend": "cd frontend && npm install && npm run build",
    "package": "npm run build:frontend && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "wait-on http://localhost:5174 && electron ."
  },
  "keywords": [],
  "author": "khalid achbboukh",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^9.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-machine-id": "^1.1.12"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.1.10",
    "wait-on": "^9.0.1",
    "node-machine-id": "^1.1.12"
  },
  "build": {
    "appId": "com.facturation.app",
    "productName": "Facturation Pro",
    "asar": true,
    "files": [
      "main.js",
      "preload.js",
      "frontend/dist/**/*",
      "backend/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
